<script id="jsbin-javascript">
function bernardTheLetterCounter(){
  var sentence = prompt("Please write any sentence to the textbox below!");
  var letter = prompt("Which letter do you choose?");
	var letterCounter=0;
	for (var i=0; i<=sentence.length; i++){
		if (sentence.charAt(i)==letter){
			letterCounter++;
		}
	}
	alert("The letter '" + letter + "' occurs " + letterCounter + " times in this sentence.")
}
bernardTheLetterCounter();
</script>
